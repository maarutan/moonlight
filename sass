#!/usr/bin/env bash
# ┬  ┬┌┐┌┬┌─  ┌─┐┌─┐┬─┐  ┌─┐┌─┐┌─┐┌─┐
# │  ││││├┴┐  ├┤ │ │├┬┘  └─┐├─┤└─┐└─┐
# ┴─┘┴┘└┘┴ ┴  └  └─┘┴└─  └─┘┴ ┴└─┘└─┘
#----------------------------------------------
# Copyright (c) 2025 maarutan. \ Marat Arzymatov All Rights Reserved.
# https://github.com/maarutan

currentdir="$(cd "$(dirname "$0")" && pwd)"
node_modules="$currentdir/node_modules"
sass_path="$node_modules/.bin/sass"

if [ ! -d "$node_modules" ]; then
    echo "node_modules not found. install dependencies:"
    echo "  npm install"
    exit 1
fi

if [ ! -x "$sass_path" ]; then
    echo "Sass not found. install dependencies:"
    echo "  npm install --save-dev sass"
    exit 1
fi

"$sass_path" "$@"

